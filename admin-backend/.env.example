# Database Configuration
DB_DRIVER=mysql
DB_USERNAME=root
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=i18n_flow

# JWT Configuration
# IMPORTANT: Change these secrets to strong, random strings (at least 32 characters)
# SECURITY RECOMMENDATIONS:
# 1. Use a cryptographically secure random generator
# 2. Generate keys with at least 32 characters
# 3. Include uppercase, lowercase, numbers, and special characters
# 4. Never use the default values in production
# 5. Generate different keys for JWT_SECRET and JWT_REFRESH_SECRET
# 
# Example key generation (Linux/Mac):
# openssl rand -base64 64
# 
# Example key generation (Node.js):
# require('crypto').randomBytes(64).toString('base64')
# 
# Example key generation (Python):
# import secrets, base64; base64.b64encode(secrets.token_bytes(64)).decode()

JWT_SECRET=your-256-bit-secret-change-this-to-a-secure-random-string
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_SECRET=your-refresh-secret-change-this-to-a-secure-random-string
JWT_REFRESH_EXPIRATION_HOURS=168

# CLI API Key Configuration
# IMPORTANT: Change this to a secure random string (at least 16 characters)
CLI_API_KEY=your-secure-api-key-change-this

# Admin User Configuration
# These credentials will be used to create the default admin user on first run
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=i18n_flow:

# Logging Configuration
LOG_LEVEL=info                   # Options: debug, info, warn, error, fatal
LOG_FORMAT=console               # Options: console, json
LOG_OUTPUT=both                  # Options: console, file, both
LOG_DIR=logs                     # Directory for log files
LOG_DATE_FORMAT=2006-01-02       # Date format for log file naming
LOG_MAX_SIZE=100                 # Maximum size in MB before rotation
LOG_MAX_AGE=7                    # Maximum days to retain old log files
LOG_MAX_BACKUPS=5                # Maximum number of old log files to retain
LOG_COMPRESS=true                # Compress rotated log files
LOG_ENABLE_CONSOLE=true          # Enable console output

# Application Environment
ENV=development                  # Options: development, production
GO_ENV=development               # Options: development, production
